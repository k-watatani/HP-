<header class="header">
  <div class="container header-inner">
    <a href="/" class="logo">
      <img src="/logo.png" alt="InsideHeart Inc. インサイドハート株式会社" class="logo-img" />
    </a>
    <button class="menu-toggle" aria-label="メニューを開く">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <nav class="nav">
      <ul class="nav-list">
        <li><a href="/service" class="nav-link">事業内容</a></li>
        <li><a href="/miroku" class="nav-link">Miroku</a></li>
        <li><a href="/company" class="nav-link">会社概要</a></li>
        <li><a href="/contact" class="btn btn-primary nav-cta">お問い合わせ</a></li>
      </ul>
    </nav>
  </div>
</header>

<script>
  const menuToggle = document.querySelector('.menu-toggle');
  const nav = document.querySelector('.nav');

  if (menuToggle && nav) {
    menuToggle.addEventListener('click', () => {
      menuToggle.classList.toggle('active');
      nav.classList.toggle('active');
    });
  }
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--line);
    z-index: 1000;
    height: 72px;
    display: flex;
    align-items: center;
    transition: background 0.3s;
  }

  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
  }

  .logo:hover {
    opacity: 0.85;
  }

  .logo-img {
    height: 44px;
    width: auto;
    display: block;
  }

  .nav-list {
    display: flex;
    gap: 28px;
    align-items: center;
  }

  .nav-link {
    font-size: 14px;
    font-weight: 500;
    color: var(--ink);
  }

  .nav-link:hover {
    color: var(--primary);
    opacity: 1;
  }

  .nav-cta {
    font-size: 14px;
    padding: 10px 22px;
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    width: 28px;
    height: 22px;
    position: relative;
    z-index: 1001;
  }

  .menu-toggle span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: var(--primary);
    position: absolute;
    left: 0;
    transition: 0.3s;
  }

  .menu-toggle span:nth-child(1) { top: 0; }
  .menu-toggle span:nth-child(2) { top: 10px; }
  .menu-toggle span:nth-child(3) { bottom: 0; }

  .menu-toggle.active span:nth-child(1) { transform: rotate(45deg); top: 10px; }
  .menu-toggle.active span:nth-child(2) { opacity: 0; }
  .menu-toggle.active span:nth-child(3) { transform: rotate(-45deg); bottom: 10px; }

  @media (max-width: 768px) {
    .menu-toggle {
      display: block;
    }

    .nav {
      position: fixed;
      top: 0;
      right: -100%;
      width: 80%;
      max-width: 320px;
      height: 100vh;
      background-color: #fff;
      padding-top: 100px;
      transition: 0.3s;
      box-shadow: -5px 0 20px rgba(0,0,0,0.1);
    }

    .nav.active {
      right: 0;
    }

    .nav-list {
      flex-direction: column;
      align-items: flex-start;
      padding: 0 32px;
      gap: 24px;
    }

    .nav-cta {
      width: 100%;
      text-align: center;
      margin-top: 16px;
    }
  }
</style>
